#!/usr/bin/python
#

import sys
from truedns.dnsovertcp import DNSServer

if __name__ == "__main__":
    	 
    daemon = DNSServer(None)
    
    if len(sys.argv) == 2:
       if 'start' == sys.argv[1]:
          daemon.start()
       elif 'stop' == sys.argv[1]:
          daemon.stop()
       elif 'reset' == sys.argv[1]:
          daemon.reset()          
       elif 'forceclean' == sys.argv[1]:
          daemon.forceclean()                       
       elif 'restart' == sys.argv[1]:
          daemon.restart()     
       else:
          print "Unknown command"
          sys.exit(2)
       sys.exit(0)
       
    else:
       print "usage: %s start|stop|restart" % sys.argv[0]
       sys.exit(2)    